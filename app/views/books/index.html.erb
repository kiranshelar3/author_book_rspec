<h2>Books List</h2>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Book Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= link_to 'Show', book_path(book), class:"btn btn-secondary" %></td>
      <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-secondary"%></td>
      <td><%= button_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class:"btn btn-secondary" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Add Book', new_book_path, class:"btn btn-secondary" %>