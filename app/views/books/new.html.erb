<h2>Add Book</h2>

<!-- < form_for :book do |f| %> -->
<%= form_for :book, url: books_path do |f| %>

  <p>
    <%= f.label :title, class:"form-label" %><br>
    <%= f.text_field :title, class:"form-control" %>
  </p>

  <%= f.label :authors,class:"form-label" %><br>

  <div class="row">
        <div class="col-md-12">
           <%= select_tag 'author_ids[]', options_for_select(authors_list, @book.book_authors.pluck(:author_id)), multiple: true, size: 06,class:"form-control" %>
        </div>
      </div>

 <br/>
  <p>
    <%= f.submit class:"btn btn-secondary" %>
  </p>
<% end %>

<%= link_to 'Books List', books_path, class:"btn btn-secondary" %>
<%= link_to 'Homepage', root_path, class:"btn btn-secondary" %>